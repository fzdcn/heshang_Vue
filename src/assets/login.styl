@import "./variable.styl"

.login-page
  display block

  .main
    width 90%
    margin px2rem(80px) auto
    background-color #fff
    border-radius px2rem(40px)
    padding px2rem(40px)
    box-shadow 0 0 px2rem(20px) rgba(73, 18, 0, .15)

  .logo-box
    height px2rem(140px)
    text-align center
    margin-bottom px2rem(80px)
    margin-top px2rem(10px)
    img
      height 100%

  .login-item
    display block
    border-bottom 1px solid #d6d6d6
    height px2rem(80px)
    position relative

    + .login-item
      margin-top px2rem(30px)

    .label
      display inline-block
      width px2rem(180px)
      height px2rem(80px)
      line-height px2rem(80px)
      border-right 1px solid $grey
      border-top 1px solid $grey
      border-left 1px solid $grey
      border-top-left-radius px2rem(10px)
      border-top-right-radius px2rem(10px)
      overflow hidden
      text-align center
      position absolute
      color $red
      font-size $fontSizeMedium

    .input-item
      width 100%
      height 100%
      box-sizing border-box
      line-height px2rem(80px)
      border none
      outline none
      padding-left px2rem(200px)
      background-color transparent
      font-size $fontSizeLarge

      &.has-addon
        padding-right px2rem(120px)

    .addon
      position absolute
      right 0
      display inline-block
      width px2rem(120px)
      height px2rem(80px)
      line-height px2rem(80px)
      text-align center
      padding 0

      &::-webkit-input-placeholder
        color #aaa

  .submit-btn
    display block
    border 0
    outline none
    font-size $fontSizeLarge
    width 90%
    height px2rem(90px)
    border-radius px2rem(10px)
    margin px2rem(60px) auto 0

  .go-register
    padding px2rem(30px) px2rem(40px) 0
    color $red
    font-size $fontSizeLarge
